%
% Page layout
%

% margins
\usepackage[margin=0.75in,papersize={5.5in,8.5in}]{geometry} 

% header design
\usepackage{fancyhdr} \pagestyle{fancy} \fancyhf{}
\setlength{\headheight}{15.2pt}
\fancyhead[RE]{\thepage}
\fancyhead[LO]{\thepage}

%
% Environments for creating entries
%

% prose -- poetry
\newenvironment{verseEntry}[2]%
{\noindent \LARGE{\textbf{#1}}\\%
\noindent \small{\textit{By: #2}} \\%
\addcontentsline{toc}{subsection}{#1 by #2}%
\setlength{\parindent}{0cm}\\[0.5cm]}%
{\newpage}

% verse -- everything else
\newenvironment{proseEntry}[2]%
{\noindent \LARGE{\textbf{#1}}\\%
\noindent \small{\textit{By: #2}}\\%
\addcontentsline{toc}{subsection}{#1 by #2}%
\setlength{\parindent}{1cm}\\[0.5cm]}%
{\newpage}

%
% Other stuff
%

% for block quotes
\usepackage{csquotes}
\SetBlockEnvironment{quotation}

% verbatim support -- for complicated poems
\usepackage{verbatim}

% line spacing
\usepackage{setspace} \singlespacing

% do not show title numbering
\setcounter{secnumdepth}{-1}  

% allow \importgraphics
\usepackage{graphicx}
% take up entire page, ignoring margins
\usepackage[absolute,overlay]{textpos}

% generate lorem ipsum text
\usepackage{lipsum}

% straight up taken from http://gael-varoquaux.info/computers/garamond/index.html
\usepackage{textcomp}
\usepackage[T1]{fontenc}
\usepackage{lmodern}
\usepackage{garamond}

% for big hanging letters in prose
\usepackage{lettrine}

% Microtyping support -- load after all fonts
\usepackage[stretch=10]{microtype}
