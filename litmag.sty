%
% Environments for creating entries
%

% prose -- poetry
\newenvironment{poetry}[2]%
{\phantomsection{} \addcontentsline{toc}{subsection}{#1 by #2}%
\noindent \LARGE{\textbf{#1}}\\%
\noindent \small{\textit{By: #2}} \\%
\obeylines \setlength{\parindent}{0cm}}%
{\newpage}

% verse -- everything else
\newenvironment{verseEnt}[2]%
{\phantomsection{} \addcontentsline{toc}{subsection}{#1 by #2}%
\noindent \LARGE{\textbf{#1}}\\%
\noindent \small{\textit{By: #2}}\\%
\setlength{\parindent}{1cm}\\[-0.37cm]}%
{\newpage}

